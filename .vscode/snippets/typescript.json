      "  return wrapperAsyncAPI(options => {",
      "    const event = $0",
      "    invoke<SuccessResult<T>>(event, options, result => {",
      "      invokeCallback(event, options, result)",
      "    })",
      "  }, options)",
      "}"
    ]
  },

